<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>To Do List</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css"
        integrity="sha384-AYmEC3Yw5cVb3ZcuHtOA93w35dYTsvhLPVnYs9eStHfGJvOvKxVfELGroGkvsg+p" crossorigin="anonymous" />
    <link rel="stylesheet" href="css/styles.css">
</head>

<body>
    <div class="box" id="heading">
        <h1>
            <%= listTitle %>
        </h1>
    </div>
    <div class="box" id="todos">
        <% if(message.length> 0) { %>
            <% if(error=="true" ) { %>
                <div id="success-msg" class="alert alert-danger">
                    <%= message %>
                </div>
                <% } else { %>
                    <div id="success-msg" class="alert alert-success">
                        <%= message %>
                    </div>
                    <% } %>
                        <% } %>
                            <% newListItems.forEach(function(item) { %>
                                <form action="/delete" method="post">
                                    <div class="item">
                                        <input type="checkbox" onChange="this.form.submit()" name="checkbox"
                                            value="<%= item._id %>">
                                        <% if(error==="false" ) { %>
                                            <div id="success-msg" class="alert alert-success">
                                                <%= message %>
                                            </div>
                                            <% } %>
                                                <p>
                                                    <%= item.name %>
                                                </p>
                                                <input type="hidden" name="listName" value="<%= listTitle%>">
                                    </div>

                                </form>
                                <% }) %>

                                    <form class=" item" action="/" method="post">
                                        <input type="text" name="newItem" placeholder="New item" autocomplete="off ">
                                        <button class="button-container" type="submit" name="list"
                                            value="<%= listTitle%>">+</button>
                                    </form>
    </div>
    <script src="/handlebar.js"></script>
</body>

</html>